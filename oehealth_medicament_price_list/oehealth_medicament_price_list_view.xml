<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oehealth_medicament_price_list_tree" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.tree</field>
            <field name="model">oehealth.medicament.price_list</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medicament Price List">
                    <field name="name"/>
                    <field name="price_list_code" />
                    <field name="state" />
                    <field name="price_list_category" groups="oehealth_base.group_oehealth_suser"/>
                    <field name="price_list_tag_ids" groups="oehealth_base.group_oehealth_suser"/>
                    <field name="price_list_status" />
                    <field name="price_list_info" colspan="4"/>
                </tree>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_price_list_form" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.form</field>
            <field name="model">oehealth.medicament.price_list</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medicament Price Lists" version="7.0">
                    <header>
                        <button name="oehealth_medicament_price_list_revised" string="Revised" states="new,okay" type="workflow" groups="oehealth_base.group_oehealth_medicament_price_list_manager"/>
                        <button name="oehealth_medicament_price_list_waiting" string="Waiting" states="new,revised" type="workflow" groups="oehealth_base.group_oehealth_medicament_price_list_manager"/>
                        <button name="oehealth_medicament_price_list_okay" string="Okay" states="new,revised,waiting" type="workflow" groups="oehealth_base.group_oehealth_medicament_price_list_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,revised,waiting,okay"
                        statusbar_colors='{"new":"blue","revised":"blue","waiting":"blue","okay":"blue"}' />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                            <div class="oe_edit_only">
                                <label for="alias"/>
                            </div>
                            <h2>
                                <field name="alias" default_focus="1" placeholder="Alias..."/>
                            </h2>
                            <div class="oe_edit_only">
                                <label for="price_list_code"/>
                            </div>
                            <h3>
                                <field name="price_list_code" placeholder="Price List Code..."/>
                            </h3>
                            <div class="oe_edit_only">
                                <label for="price_list_category" groups="oehealth_base.group_oehealth_suser"/>
                            </div>
                            <h3>
                                <field name="price_list_category" placeholder="Price List Category..." groups="oehealth_base.group_oehealth_suser"/>
                            </h3>
                            <div class="oe_edit_only">
                                <label for="price_list_tag_ids" groups="oehealth_base.group_oehealth_suser"/>
                            </div>
                            <h3>
                                <field name="price_list_tag_ids" widget="many2many_tags" placeholder="Price List Tags..." groups="oehealth_base.group_oehealth_suser"/>
                            </h3>
                        </div>
                        <notebook>
                            <page string="Price List Information">
                                <group>
                                    <field name="price_list_status" />
                                    <field name="date_price_list_inclusion" />
                                    <field name="date_price_list_activation" />
                                    <field name="date_price_list_inactivation" />
                                </group>
                                <group string="Information" />
                                <div class="oe_edit_only">
                                    <label for="price_list_info"/>
                                </div>
                                <field name="price_list_info" colspan="4" nolabel="1"/>
                                <group groups="oehealth_base.group_oehealth_rmanager">
                                    <group string="Creation" >
                                        <field name="create_uid" string="User" />
                                        <field name="create_date" string="Date" />
                                    </group>
                                    <group string="Last Update" >
                                        <field name="write_uid" string="User" />
                                        <field name="write_date" string="Date"/>
                                    </group>
                                </group>
                            </page>
		                    <page string="Price List Items">
		                        <group>
		                            <field name="medicament_price_list_item_ids" colspan="4" nolabel="1" />
		                        </group>
		                    </page>
                            <page string="Price List Annotations" groups="oehealth_base.group_oehealth_suser">
                                <group>
                                    <field name="price_list_annotation_ids" colspan="4" nolabel="1" />
                                </group>
                            </page>
                            <page string="Settings" groups="oehealth_base.group_oehealth_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_price_list_search" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.search</field>
            <field name="model">oehealth.medicament.price_list</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Price List">
                    <field name="name" />
                    <field name="price_list_code" />
                    <field name="price_list_category" />
                    <field name="price_list_tag_ids" />
                    <field name="price_list_status" />
                    <field name="price_list_info" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Stage" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Price List Status" domain="[]" context="{'group_by':'price_list_status'}" />
                        <filter string="Medicament Price List Category" domain="[]" context="{'group_by':'price_list_category'}" />
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_oehealth_medicament_price_list_view">
            <field name="name">Medicament Price Lists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oehealth.medicament.price_list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oehealth_medicament_price_list_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_price_list_view_form">
            <field name="act_window_id" ref="act_open_oehealth_medicament_price_list_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oehealth_medicament_price_list_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_price_list_view_tree">
            <field name="act_window_id" ref="act_open_oehealth_medicament_price_list_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oehealth_medicament_price_list_tree" />
        </record>
        
        <menuitem name="Price Lists" id="menu_health_medication_medicament_price_lists"
            parent="oehealth_base.menu_health_medication_medicament"
            groups="oehealth_base.group_oehealth_medicament_price_list_user"
            sequence="25"
            action="act_open_oehealth_medicament_price_list_view" />

    </data>
</openerp>
