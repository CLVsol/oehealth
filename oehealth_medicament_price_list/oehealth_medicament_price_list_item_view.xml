<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oehealth_medicament_price_list_item_tree" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.item.tree</field>
            <field name="model">oehealth.medicament.price_list.item</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medicament Price List Items">
                    <field name="price_list_id" />
                    <field name="medicament_id" />
                    <field name="consumer_price" />
                    <field name="production_price" />
                    <field name="refund_price" />
                    <field name="info" />
                </tree>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_price_list_item_form" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.item.form</field>
            <field name="model">oehealth.medicament.price_list.item</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medicament Price List Items" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="price_list_id"/>
                            </div>
                            <h2>
                                <field name="price_list_id" placeholder="Group Name..."/>
                            </h2>
                            <div class="oe_edit_only">
                                <label for="medicament_id"/>
                            </div>
                            <h3>
                                <field name="medicament_id" placeholder="Group Name..."/>
                            </h3>
                            <group>
                                <field name="consumer_price" />
                                <field name="production_price" />
                                <field name="refund_price" />
                            </group>
                        </div>
                        <notebook>
                            <page string="Information">
                                <group string="Information" />
                                <div class="oe_edit_only">
                                    <label for="info"/>
                                </div>
                                <field name="info" colspan="4"/>
                                <group groups="oehealth_base.group_oehealth_rmanager">
                                    <group string="Creation" >
                                        <field name="create_uid" string="User" />
                                        <field name="create_date" string="Date" />
                                    </group>
                                    <group string="Last Update" >
                                        <field name="write_uid" string="User" />
                                        <field name="write_date" string="Date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_price_list_item_search" model="ir.ui.view">
            <field name="name">oehealth.medicament.price_list.item.search</field>
            <field name="model">oehealth.medicament.price_list.item</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medicament Price List Items">
                    <field name="price_list_id" />
                    <field name="medicament_id" />
                    <newline />
                    <group expand="0" string="Medicament Group By...">
                        <filter string="Medicament Price List" domain="[]" context="{'group_by':'price_list_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_oehealth_medicament_price_list_item_view">
            <field name="name">Medicament Price List Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oehealth.medicament.price_list.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oehealth_medicament_price_list_item_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_price_list_item_view_form">
            <field name="act_window_id" ref="act_open_oehealth_medicament_price_list_item_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oehealth_medicament_price_list_item_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_price_list_item_view_tree">
            <field name="act_window_id" ref="act_open_oehealth_medicament_price_list_item_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oehealth_medicament_price_list_item_tree" />
        </record>
        
        <menuitem name="Items" id="menu_health_medication_medicament_price_lists_items"  
            parent="menu_health_medication_medicament_price_lists"
            groups="oehealth_base.group_oehealth_medicament_group_user"
            sequence="20" 
            action="act_open_oehealth_medicament_price_list_item_view" />

    </data>
</openerp>
