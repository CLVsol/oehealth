<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oehealth_patient_category_form" model="ir.ui.view">
            <field name="name">Patient Category</field>
            <field name="model">oehealth.patient.category</field>
            <field name="arch" type="xml">
                <form string="Patient Categories" version="7.0">
                    <sheet>
                        <group>
                            <field name="parent_id"/>
                            <field name="name" default_focus="1"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Information" groups="oehealth_base.group_oehealth_suser">
                                <group string="Information" />
                                <div class="oe_edit_only">
                                    <label for="info"/>
                                </div>
                                <field name="info" colspan="4"/>
                                <group groups="oehealth_base.group_oehealth_rmanager">
                                    <group string="Creation" >
                                        <field name="create_uid" string="User" />
                                        <field name="create_date" string="Date" />
                                    </group>
                                    <group string="Last Update" >
                                        <field name="write_uid" string="User" />
                                        <field name="write_date" string="Date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Patients" groups="oehealth_base.group_oehealth_suser">
                                <group>
                                    <field name="patient_ids" colspan="4" nolabel="1" />
                                </group>
                            </page>
                            <page string="Settings" groups="oehealth_base.group_oehealth_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oehealth_patient_category_tree" model="ir.ui.view">
            <field name="name">oehealth.patient.category.tree</field>
            <field name="model">oehealth.patient.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Patient Categories">
                    <field name="complete_name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <record id="view_oehealth_patient_category_search" model="ir.ui.view">
            <field name="name">oehealth.patient.category.search</field>
            <field name="model">oehealth.patient.category</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Category">
                    <field name="name" />
                    <field name="complete_name" />
                    <field name="description" />
                    <newline />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_oehealth_patient_category_view">
            <field name="name">Patient Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oehealth.patient.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oehealth_patient_category_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_patient_category_view_form">
            <field name="act_window_id" ref="act_open_oehealth_patient_category_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oehealth_patient_category_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_patient_category_view_tree">
            <field name="act_window_id" ref="act_open_oehealth_patient_category_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oehealth_patient_category_tree" />
        </record>
        
        <menuitem name="Patient Categories" id="menu_health_config_health_patient_patient_categoriess" 
            parent="oehealth_base.menu_health_config_health_patient"
            groups="oehealth_base.group_oehealth_suser"
            sequence="15"
            action="act_open_oehealth_patient_category_view" />

    </data>
</openerp>
