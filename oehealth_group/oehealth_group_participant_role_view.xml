<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oehealth_group_participant_role_form" model="ir.ui.view">
            <field name="name">Group Participant Roles</field>
            <field name="model">oehealth.group.participant.role</field>
            <field name="arch" type="xml">
                <form string="Group Participant Roles" version="7.0">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Information">
                                <group string="Information" />
                                <div class="oe_edit_only">
                                    <label for="info"/>
                                </div>
                                <field name="info" colspan="4"/>
                                <group groups="oehealth_base.group_oehealth_rmanager">
                                    <group string="Creation" >
                                        <field name="create_uid" string="User" />
                                        <field name="create_date" string="Date" />
                                    </group>
                                    <group string="Last Update" >
                                        <field name="write_uid" string="User" />
                                        <field name="write_date" string="Date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Settings" groups="oehealth_base.group_oehealth_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oehealth_group_participant_role_tree" model="ir.ui.view">
            <field name="name">oehealth.group.participant.role.tree</field>
            <field name="model">oehealth.group.participant.role</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Group Participant Roles">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <record id="view_oehealth_group_participant_role_search" model="ir.ui.view">
            <field name="name">oehealth.group.participant.role.search</field>
            <field name="model">oehealth.group.participant.role</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Group Participant Role">
                    <field name="name" />
                    <field name="description" />
                    <separator/>
                    <filter string="Inactive Participant Roles" name="active" domain="[('active','=',0)]" help="Inactive Participant Roles"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_oehealth_group_participant_role_view">
            <field name="name">Group Participant Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oehealth.group.participant.role</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oehealth_group_participant_role_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_group_participant_role_view_form">
            <field name="act_window_id" ref="act_open_oehealth_group_participant_role_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oehealth_group_participant_role_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_group_participant_role_view_tree">
            <field name="act_window_id" ref="act_open_oehealth_group_participant_role_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oehealth_group_participant_role_tree" />
        </record>
        
        <menuitem name="Participant Roles" id="menu_health_config_health_base_groups_participant_roles"
            parent="menu_health_config_health_base_groups"
            groups="oehealth_base.group_oehealth_group_user"
            sequence="20"
            action="act_open_oehealth_group_participant_role_view" />

    </data>
</openerp>
