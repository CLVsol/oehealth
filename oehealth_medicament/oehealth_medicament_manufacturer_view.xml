<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_oehealth_medicament_manufacturer_tree" model="ir.ui.view">
            <field name="name">oehealth.medicament.manufacturer.tree</field>
            <field name="model">oehealth.medicament.manufacturer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medicament Manufacturer">
                    <field name="name" />
                    <field name="code" />
                    <field name="info" colspan="4"/>
                </tree>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_manufacturer_form" model="ir.ui.view">
            <field name="name">oehealth.medicament.manufacturer.form</field>
            <field name="model">oehealth.medicament.manufacturer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medicament Manufacturers" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                            <div class="oe_edit_only">
                                <label for="code"/>
                            </div>
                            <h2>
                                <field name="code" default_focus="1" placeholder="Code..."/>
                            </h2>
                        </div>
                        <notebook>
                            <page string="Information">
                                <group string="Information" />
                                <div class="oe_edit_only">
                                    <label for="info"/>
                                </div>
                                <field name="info" colspan="4" nolabel="1"/>
                            </page>
                            <!--page string="Manuifacturer Annotations" groups="oehealth_base.group_oehealth_medicament_suser">
                                <group>
                                    <field name="medicament_annotation_ids" colspan="4" nolabel="1" />
                                </group>
                            </page-->
                            <page string="Settings" groups="oehealth_base.group_oehealth_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_oehealth_medicament_manufacturer_search" model="ir.ui.view">
            <field name="name">oehealth.medicament.manufacturer.search</field>
            <field name="model">oehealth.medicament.manufacturer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medicament Manufacturer">
                    <field name="name" />
                    <field name="code" />
                    <field name="info" />
                    <newline />
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_oehealth_medicament_manufacturer_view">
            <field name="name">Medicament Manufacturers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oehealth.medicament.manufacturer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oehealth_medicament_manufacturer_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_manufacturer_view_form">
            <field name="act_window_id" ref="act_open_oehealth_medicament_manufacturer_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oehealth_medicament_manufacturer_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_oehealth_medicament_manufacturer_view_tree">
            <field name="act_window_id" ref="act_open_oehealth_medicament_manufacturer_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oehealth_medicament_manufacturer_tree" />
        </record>
        
        <menuitem name="Manufacturers" id="menu_health_config_medication_medicaments_manufacturers"
            parent="menu_health_config_medication_medicaments"
            groups="oehealth_base.group_oehealth_medicament_user"
            sequence="5"
            action="act_open_oehealth_medicament_manufacturer_view" />

    </data>
</openerp>
